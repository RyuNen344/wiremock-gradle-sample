root=true

[*]
charset=utf-8
end_of_line=lf
indent_size=4
indent_style=space
insert_final_newline=true
max_line_length=100
tab_width=4

[{*.bash,*.sh,*.zsh}]
indent_size=2
tab_width=2

[{*.har,*.json,*.json5}]
indent_size=2

[*.md]
max_line_length=off

[{*.toml,*.yaml,*.yml}]
indent_size=2

[.idea/*.xml]
indent_size=2

[{Dangerfile*,Fastfile,Gemfile}]
indent_size=2

[*.{ts,tsx,js}]
max_line_length=140

[*.{kt,kts}]
max_line_length=140
